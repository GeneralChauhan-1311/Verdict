<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SecondActivity">

    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_image1"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/under_development"/>
            <TextView
                android:id="@+id/item_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">



                <ImageView
                    android:id="@+id/likeicon1"
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="25dp"
                    app:srcCompat="@drawable/ic_outline_thumb_up_24" />

                <ImageView
                    android:id="@+id/dislikeicon1"
                    android:layout_width="45dp"
                    android:layout_height="54dp"
                    android:layout_marginHorizontal="25dp"
                    app:srcCompat="@drawable/ic_outline_thumb_down_24" />

                <ImageView
                    android:id="@+id/share1"
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="25dp"
                    app:srcCompat="@drawable/ic_baseline_screen_share_24" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="25dp"
                    app:srcCompat="@drawable/ic_outline_save_24" />


            </LinearLayout>



            <EditText
                android:id="@+id/comment1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="COMMENT BOX" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <ImageView
        android:id="@+id/commentimg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        android:src="@drawable/commentsection"

        />

</LinearLayout>